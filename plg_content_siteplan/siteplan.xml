<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>plg_content_siteplan</name>
	<author>Redevolution</author>
	<creationDate>April 2015</creationDate>
	<copyright>Redevolution.com</copyright>
	<license>GNU General Public License</license>
	<authorEmail>info@joomlasiteplanner.com</authorEmail>
	<authorUrl>www.joomlasiteplanner.com</authorUrl>
	<version>2.0.0</version>
	<description>Allow updating of siteplan informtion on content.</description>
	<scriptfile>plg_content_siteplan.scriptfile.php</scriptfile>
	<files>
		<filename plugin="siteplan">siteplan.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_siteplan.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_siteplan.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
            <field type="spacer" name="notenabled" label="PLG_CONTENT_SITEPLAN_NONE_ENABLED" />
		</fields>
	</config>
</extension>
